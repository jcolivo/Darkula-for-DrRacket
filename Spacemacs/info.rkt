(define dark-paren-match         #(41 66 45 0.5))
(define dark-string              string)
(define dark-variable            #(117 144 219))
(define dark-warning             warning)
(define dark-output              #(197 110 195))

(define framework:color-schemes
  `(#hash((name . "Spacemacs Light")
          (white-on-black-base? . #f)
          (colors
           .
           (
            (drracket:check-syntax:both-obligation-style-pref       ,light-yellow)
            (drracket:check-syntax:free-variable                    ,light-red)
            (drracket:check-syntax:imported                         ,light-magenta)
            (drracket:check-syntax:lexically-bound                  ,light-keyword)
            (drracket:check-syntax:my-obligation-style-pref         ,light-cyan)
            (drracket:check-syntax:set!d                            ,light-warning)
            (drracket:check-syntax:their-obligation-style-pref      ,light-green)
            (drracket:check-syntax:unk-obligation-style-pref        ,light-warning)
            (drracket:check-syntax:unused-require                   ,light-red)
            (drracket:read-eval-print-loop:error-color              ,light-error)
            (drracket:read-eval-print-loop:out-color                ,light-output)
            (drracket:read-eval-print-loop:value-color              ,light-keyword)
            (drracket:syncheck:matching-identifiers                 ,dark-isearch-background)
            (framework:basic-canvas-background                      ,light-background)
            (framework:default-text-color                           ,light-foreground)
            (framework:misspelled-text-color                        ,light-warning)
            (framework:paren-match-color                            ,light-highlight)
            (framework:syntax-color:scheme:comment                  ,light-comment)
            (framework:syntax-color:scheme:constant                 ,light-constant)
            (framework:syntax-color:scheme:error                    ,light-error)
            (framework:syntax-color:scheme:hash-colon-keyword       ,light-hash-colon-keyword)
            (framework:syntax-color:scheme:keyword                  ,light-keyword bold)
            (framework:syntax-color:scheme:other                    ,light-foreground)
            (framework:syntax-color:scheme:parenthesis              ,light-dim)
            (framework:syntax-color:scheme:string                   ,light-string)
            (framework:syntax-color:scheme:symbol                   ,light-foreground)
            (framework:syntax-color:scheme:text                     ,light-comment)
            ;; (plt:htdp:test-coverage-off                          ,light-warning bold)
            (plt:htdp:test-coverage-on                              ,light-foreground)
            ;; (plt:module-language:test-coverage-off               ,light-warning bold)
            (plt:module-language:test-coverage-on                   ,light-foreground))))

    #hash((name . "Spacemacs Dark")
          (white-on-black-base? . #t)
          (colors
           .
           ((drracket:check-syntax:both-obligation-style-pref       ,dark-yellow)
            (drracket:check-syntax:free-variable                    ,dark-red)
            (drracket:check-syntax:imported                         ,dark-magenta)
            (drracket:check-syntax:lexically-bound                  ,dark-keyword)
            (drracket:check-syntax:my-obligation-style-pref         ,dark-cyan)
            (drracket:check-syntax:set!d                            ,dark-warning)
            (drracket:check-syntax:their-obligation-style-pref      ,dark-green)
            (drracket:check-syntax:unk-obligation-style-pref        ,dark-warning)
            (drracket:check-syntax:unused-require                   ,dark-red)
            (drracket:read-eval-print-loop:error-color              ,dark-error)
            (drracket:read-eval-print-loop:out-color                ,dark-output)
            (drracket:read-eval-print-loop:value-color              ,dark-keyword)
            (drracket:syncheck:matching-identifiers                 ,light-isearch-background)
            (framework:basic-canvas-background                      ,dark-background)
            (framework:default-text-color                           ,dark-foreground)
            (framework:misspelled-text-color                        ,dark-warning)
            (framework:paren-match-color                            ,dark-highlight)
            (framework:syntax-color:scheme:comment                  ,dark-comment)
            (framework:syntax-color:scheme:constant                 ,dark-constant)
            (framework:syntax-color:scheme:error                    ,dark-error)
            (framework:syntax-color:scheme:hash-colon-keyword       ,dark-hash-colon-keyword)
            (framework:syntax-color:scheme:keyword                  ,dark-keyword bold)
            (framework:syntax-color:scheme:other                    ,dark-foreground)
            (framework:syntax-color:scheme:parenthesis              ,dark-dim)
            (framework:syntax-color:scheme:string                   ,dark-string)
            (framework:syntax-color:scheme:symbol                   ,dark-foreground)
            (framework:syntax-color:scheme:text                     ,dark-comment)
            ;; (plt:htdp:test-coverage-off                          ,dark-warning bold)
            (plt:htdp:test-coverage-on                              ,dark-foreground)
            ;; (plt:module-language:test-coverage-off               ,dark-warning bold)
            (plt:module-language:test-coverage-on                   ,dark-foreground))))))
